#include <bits/stdc++.h> 
int max_shares(int k, int n, vector<int> &shares){
    // Write your code here.
	vector<array<int, 2> > sh(n);
	for (int i = 0; i < n; i++) sh[i] = {shares[i], i + 1};

	int ans = 0;
	sort(sh.begin(), sh.end());

	for (auto &s : sh)
	{
		if (s[0] > k) break;

		ans += min(k / s[0], s[1]);
		k -= min(k / s[0], s[1]) * s[0];
	}

	return ans;
}
