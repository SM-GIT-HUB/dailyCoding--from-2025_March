class Solution {
public:
    int triangleNumber(vector<int>& arr) {
        int ans = 0;
        sort(arr.begin(), arr.end());

        for (int k = arr.size() - 1; k > 1; k--)
        {
            int i = 0;
            int j = k - 1;

            while (i < j)
            {
                if (arr[i] + arr[j] > arr[k])
                {
                    ans += (j - i);
                    j--;
                }
                else
                    i++;
            }
        }

        return ans;
    }
};
