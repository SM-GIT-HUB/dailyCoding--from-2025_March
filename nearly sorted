class Solution {
  public:
    void nearlySorted(vector<int>& arr, int k) {
        // code here
        priority_queue<int, vector<int>, greater<int> > pq;
        
        for (int i = 0; i < k; i++) pq.push(arr[i]);
        
        for (int i = 0; i < arr.size(); i++)
        {
            if (i + k < arr.size()) pq.push(arr[i + k]);
            arr[i] = pq.top();
            pq.pop();
        }
    }
};
