class Solution {
public:
    int maximumTop(vector<int>& nums, int k) {
        if (nums.size() == 1 && (k & 1)) return -1;

        int ans = -1;
        int last = k + 1;
        if (nums.size() < last) last = nums.size();

        for (int i = 0; i < last; i++)
        {
            if (k - i == 0 || k - i > 1) ans = max(nums[i], ans);
        }

        return ans;
    }
};
