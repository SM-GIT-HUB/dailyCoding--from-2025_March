class Solution {
public:
    int minimumRounds(vector<int>& tasks) {
        int count = 0;
        unordered_map<int, int> mapp;

        for (int x : tasks)
        {
            ++mapp[x];
        }

        for (auto [_, c] : mapp)
        {
            if (c < 2) {
                return -1;
            }

            count += c / 3;

            if (c % 3) {
                ++count;
            }
        }

        return count;
    }
};
