#include<bits/stdc++.h>
using namespace std;

int main()
{
    int t;
    cin >> t;
    
    while (t--)
    {
        int n, k;
        cin >> n >> k;
        
        vector<int> a(n);
        for (auto &x : a) cin >> x;
        
        if (is_sorted(a.begin(), a.end()) || k > 1) cout << "YES";
        else cout << "NO";
        
        cout << endl;
    }
}
