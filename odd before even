#include <bits/stdc++.h> 
/****************************************************************
Following is the Linked list node structure already written

template <typename T>
class LinkedListNode
{
public:
    T data;
    LinkedListNode<T>* next;
    LinkedListNode(T data)
    { 
        this->data = data;
        next = NULL;
    }
};
*****************************************************************/

using Node = LinkedListNode<int>;

LinkedListNode<int>* commonOddEven(LinkedListNode<int> *head1, LinkedListNode<int> *head2) 
{
    // Write your code here.
    Node* odd = new Node(-1);
    Node* oTail = odd;

    Node* even = new Node(-2);
    Node* eTail = even;

    Node* a = head1;
    Node* b = head2;

    while (a && b)
    {
        if (a->data == b->data)
        {
            int d = a->data;

            if (d & 1)
            {
                oTail->next = new Node(d);
                oTail = oTail->next;
            }
            else
            {
                eTail->next = new Node(d);
                eTail = eTail->next;
            }

            a = a->next;
            b = b->next;
        }
        else if (a->data < b->data) {
            a = a->next;
        }
        else
            b = b->next;
    }

    oTail->next = even->next;

    return odd->next;
}
