class Solution {
public:
    int maxFreqSum(string s) {
        auto isVowel = [](char x) {
            return (x == 'a' || x == 'e' || x == 'i' || x == 'o' || x == 'u');
        };

        int mapp[26] = {0};
        for (char x : s) mapp[x - 'a']++;

        int vowel = 0, conso = 0;

        for (int i = 0; i < 26; i++)
        {
            if (isVowel(i + 'a')) vowel = max(mapp[i], vowel);
            else conso = max(mapp[i], conso);
        }

        return (vowel + conso);
    }
};
