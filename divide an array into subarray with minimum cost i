class Solution {
public:
    int minimumCost(vector<int>& nums) {
        int a = 100;
        int b = 100;

        for (int i = 1; i < (int)nums.size(); i++)
        {
            int x = nums[i];

            if (x <= a)
            {
                b = a;
                a = x;
            }
            else if (x < b) {
                b = x;
            }
        }

        return nums[0] + a + b;
    }
};
