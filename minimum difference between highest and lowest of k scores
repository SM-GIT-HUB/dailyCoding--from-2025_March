class Solution {
public:
    int minimumDifference(vector<int>& arr, int k) {
        int diff = INT_MAX;
        sort(arr.begin(), arr.end());

        for (int i = 0; i + k - 1 < (int)arr.size(); i++)
        {
            diff = min(diff, arr[i + k - 1] - arr[i]);
        }

        return diff;
    }
};
