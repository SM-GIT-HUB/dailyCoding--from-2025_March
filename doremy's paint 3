#include<bits/stdc++.h>
using namespace std;

#define enc '\n'

using int64 = int64_t; using lint = long long; using int128 = __int128;
using vint = vector<int>; using vi64 = vector<int64>; using pr2 = pair<int, int>;
using pr64 = pair<int64, int64>; using vvint = vector<vint>; using vvi64 = vector<vi64>;

template<typename... Args>
void prnt(const Args&... args) { ((cout << args << ' '), ...); }

template<typename T>
void singleInput(int64 n, vector<T>& arr) { arr.resize(n); for (auto &x : arr) cin >> x; }

template<typename T>
void pairInput(int64 n, vector<T>& arr) { arr.resize(n); for (auto &x : arr) cin >> x.first >> x.second; }

void myFunction()
{
	int n;
	cin >> n;
	
	vint a;
	singleInput(n, a);
	
	if (n == 2)
	{
		prnt("YES");
		return;
	}
	
	unordered_map<int, int> mapp;
	
	for (auto x : a)
	{
		++mapp[x];
		
		if ((int)mapp.size() > 2)
		{
			prnt("NO");
			return;
		}
	}
	
	if (mapp.size() == 1)
	{
		prnt("YES");
		return;
	}
	
	vector<int> arr;
	
	for (auto &it : mapp) arr.push_back(it.second);
	
	if (abs(arr[0] - arr[1]) <= 1) {
		prnt("YES");
	}
	else
		prnt("NO");
}

int main()
{
	ios::sync_with_stdio(false);
	cin.tie(nullptr);
	
	int t;
	cin >> t;
	
	while (t--)
	{
		myFunction();
		cout << enc;
	}
	
	return 0;
}
