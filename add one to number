#include <bits/stdc++.h> 
vector<int> addOneToNumber(vector<int> arr)
{
    // Write your code here
    int carry = 1;
    vector<int> ans;

    for (int i = arr.size() - 1; i >= 0; i--)
    {
        int sum = carry + arr[i];
        ans.push_back(sum % 10);
        carry = sum / 10;
    }

    if (carry) ans.push_back(carry);

    while (ans.size() > 1 && ans.back() == 0)
    {
        ans.pop_back();
    }

    reverse(ans.begin(), ans.end());
    return ans;
}
