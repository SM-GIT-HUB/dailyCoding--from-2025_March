class Solution {
public:
    int subarraysDivByK(vector<int>& arr, int k) {
        int count = 0;
        int mapp[30003] = {0};

        int rem = 0;
        mapp[0] = 1;

        for (int x : arr)
        {
            rem = ((rem + x) % k + k) % k;

            if (mapp[rem]) {
                count += mapp[rem];
            }

            ++mapp[rem];
        }

        return count;
    }
};
