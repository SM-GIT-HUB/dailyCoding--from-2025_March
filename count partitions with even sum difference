class Solution {
public:
    int countPartitions(vector<int>& arr) {
        int left = 0;
        int right = 0;

        for (int x : arr)
        {
            right += x;
        }

        int count = 0;

        for (int i = 0; i < arr.size() - 1; i++)
        {
            left += arr[i];
            right -= arr[i];

            if ((left - right) % 2 == 0) {
                ++count;
            }
        }

        return count;
    }
};
