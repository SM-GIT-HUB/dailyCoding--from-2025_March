class Solution {
public:
    int maxDistinctElements(vector<int>& arr, int k) {
        sort(arr.begin(), arr.end());
        int count = 0, prev = INT_MIN;

        for (int x : arr)
        {
            int curr = max(x - k, prev + 1);

            if (curr <= x + k)
            {
                count++;
                prev = curr;
            }
        }

        return count;
    }
};
