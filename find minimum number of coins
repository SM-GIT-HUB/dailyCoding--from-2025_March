
int coins[] = {1, 2, 5, 10, 20, 50, 100, 500, 1000};

vector<int> MinimumCoins(int n)
{
    // Write your code here
    vector<int> ans;

    for (int i = 8; n && i >= 0; i--)
    {
        int v = coins[i];

        if (v > n) {
            continue;
        }

        int count = n / v;
        n = n % v;

        for (int c = 0; c < count; c++)
        {
            ans.push_back(v);
        }
    }

    return ans;
}
