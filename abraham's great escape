#include<bits/stdc++.h>
using namespace std;

#define enc '\n'

using int64 = int64_t; using lint = long long; using int128 = __int128;
using vint = vector<int>; using vi64 = vector<int64>; using pr2 = pair<int, int>;
using pr64 = pair<int64, int64>; using vvint = vector<vint>; using vvi64 = vector<vi64>;

template<typename... Args>
void prnt(const Args&... args) { ((cout << args << ' '), ...); }

template<typename T>
void singleInput(int64 n, vector<T>& arr) { arr.resize(n); for (auto &x : arr) cin >> x; }

template<typename T>
void pairInput(int64 n, vector<T>& arr) { arr.resize(n); for (auto &x : arr) cin >> x.first >> x.second; }

void myFunction()
{
	int64 n, k;
	cin >> n >> k;
	
	if ((n * n - k) == 1)
	{
		prnt("NO");
		return;
	}
	
	int64 total = 0;
	
	vector<string> arr(n, string(n, '.'));
	
	for (int i = 0; i < n && total < k; i++)
	{
		for (int j = 0; j < n && total < k; j++)
		{
			arr[i][j] = 'U';
			++total;
		}
	}
	
	for (int i = 0; i < n - 1; i++)
	{
		for (int j = 0; j < n; j++)
		{
			if (arr[i][j] == '.') arr[i][j] = 'D';
		}
	}
	
	char ch = 'R';
	
	for (int j = 0; j < n; j++)
	{
		if (arr[n - 1][j] == '.')
		{
			arr[n - 1][j] = ch;
			ch = (ch == 'R')? 'L' : ch;
		}
	}
	
	cout << "YES" << enc;
	
	for (int i = 0; i < n - 1; i++)
	{
		prnt(arr[i]);
		cout << enc;
	}
	
	prnt(arr.back());
}

int main()
{
	ios::sync_with_stdio(false);
	cin.tie(nullptr);
	
	int t;
	cin >> t;
	
	while (t--)
	{
		myFunction();
		cout << enc;
	}
	
	return 0;
}
