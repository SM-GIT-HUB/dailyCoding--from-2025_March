#include <bits/stdc++.h> 
double calculateArea(int n, vector<vector<int>> &p){
    // Write your code here.
    double ans = 0;

    for (int i = 0; i < n - 2; i++)
    {
        for (int j = i + 1; j < n - 1; j++)
        {
            for (int k = j + 1; k < n; k++)
            {
                double x1 = p[i][0];
                double x2 = p[j][0];
                double x3 = p[k][0];
                double y1 = p[i][1];
                double y2 = p[j][1];
                double y3 = p[k][1];

                double area = 0.5 * abs(x1 * (y2 - y3) + x2 * (y3 - y1) + x3 * (y1 - y2));
                ans = max(area, ans);
            }
        }
    }

    return ans;
}
