class Solution {
public:
    long long zeroFilledSubarray(vector<int>& nums) {
        int start = -1;
        long long count = 0;

        for (int i = 0; i < nums.size(); i++)
        {
            if (!nums[i])
            {
                if (start == -1) start = i;
                count += (i - start + 1);
            }
            else
                start = -1;
        }

        return count;
    }
};
