class Solution {
public:
    vector<int> findClosestElements(vector<int>& arr, int k, int x) {
        int len = arr.size();
        int i = 0, j = arr.size() - 1;

        while (len != k)
        {
            if (abs(arr[i] - x) > abs(arr[j] - x)) i++;
            else j--;

            len--;
        }

        return vector<int>(arr.begin() + i, arr.begin() + j + 1);
    }
};
