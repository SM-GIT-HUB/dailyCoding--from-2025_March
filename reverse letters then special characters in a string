class Solution {
public:
    string reverseByType(string s) {
        int i = 0, j = (int)s.size();

        while (i < j)
        {
            while (i < j && !isalpha(s[i]))
            {
                i++;
            }

            while (i < j && !isalpha(s[j]))
            {
                j--;
            }

            if (i < j) {
                swap(s[i++], s[j--]);
            }
        }

        i = 0, j = (int)s.size() - 1;

        while (i < j)
        {
            while (i < j && isalpha(s[i]))
            {
                i++;
            }

            while (i < j && isalpha(s[j]))
            {
                j--;
            }

            if (i < j) {
                swap(s[i++], s[j--]);
            }
        }

        return s;
    }
};
