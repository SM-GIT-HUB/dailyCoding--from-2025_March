class Solution {
public:
    int binaryGap(int n) {
        int dist = 0;
        int maxi = 0;

        while (n)
        {
            if (n & 1)
            {
                maxi = max(dist, maxi);
                dist = 1;
            }
            else if (dist) {
                ++dist;
            }

            n = n >> 1;
        }

        return maxi;
    }
};
