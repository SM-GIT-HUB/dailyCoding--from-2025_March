/*
class Node {
  public:
    int data;
    Node* left;
    Node* right;

    Node(int value) {
        data = value;
        left = nullptr;
        right = nullptr;
    }
};*/

class Solution {
  public:
    void dfs(Node* root, int &sum)
    {
        if (!root) return;
        
        dfs(root->right, sum);
        
        sum += root->data;
        root->data = sum - root->data;
        
        dfs(root->left, sum);
    }
  
    void transformTree(Node *root) {
        // code here
        int sum = 0;
        dfs(root, sum);
    }
};
