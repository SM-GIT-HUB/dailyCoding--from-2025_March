#include<bits/stdc++.h>
using namespace std;

#define enc '\n'

using int64 = int64_t; using lint = long long; using int128 = __int128;
using vint = vector<int>; using vi64 = vector<int64>; using pr2 = pair<int, int>;
using pr64 = pair<int64, int64>; using vvint = vector<vint>; using vvi64 = vector<vi64>;

template<typename... Args>
void prnt(const Args&... args) { ((cout << args << ' '), ...); }

template<typename T>
void singleInput(int64 n, vector<T>& arr) { arr.resize(n); for (auto &x : arr) cin >> x; }

template<typename T>
void pairInput(int64 n, vector<T>& arr) { arr.resize(n); for (auto &x : arr) cin >> x.first >> x.second; }

void myFunction()
{
	int n;
	cin >> n;
	
	string str;
	cin >> str;
	
	int last = -1;
	int count = 0;
	
	for (int i = 0; i < n; i++)
	{
		if (str[i] == '.')
		{
			if (last == -1) {
				last = i;
			}
		}
		else
		{
			if (last != -1)
			{
				int len = (i - last);
				
				if (len >= 3)
				{
					prnt(2);
					return;
				}
				
				if (last == (i - 1)) ++count;
				else count += 2;
				
				last = -1;
			}
		}
	}
	
	if (str.back() == '.')
	{
		int len = (n - last);
		
		if (len >= 3)
		{
			prnt(2);
			return;
		}
		
		if (last == (n - 1)) ++count;
		else count += 2;
	}
	
	prnt(count);
}

int main()
{
	ios::sync_with_stdio(false);
	cin.tie(nullptr);
	
	int t;
	cin >> t;
	
	while (t--)
	{
		myFunction();
		cout << enc;
	}
	
	return 0;
}
