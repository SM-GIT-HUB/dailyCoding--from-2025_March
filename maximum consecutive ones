int longestSubSeg(vector<int> &arr, int n, int k){
    // Write your code here.
    int ans = 0;
    int start = 0, end = 0;

    int count = 0;

    while (end < n)
    {
        count += (arr[end] == 0);

        while (count > k)
        {
            count -= (arr[start++] == 0);
        }

        ans = max(end - start + 1, ans);
        end++;
    }

    return ans;
}
