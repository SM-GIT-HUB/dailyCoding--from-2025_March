#include<bits/stdc++.h>
using namespace std;

#define enc '\n'

using int64 = int64_t;
using int128 = __int128;
using vint = vector<int>;
using vi64 = vector<int64_t>;
using pr2 = pair<int, int>;
using pr64 = pair<int64, int64>;

template<typename... Args>
void prnt(const Args&... args)
{
    ((cout << args << ' '), ...);
}

void myFunction()
{
	int64 n;
	cin >> n;
	
	if (!(n & 1))
	{
		prnt(n);
		
		for (int i = 2; i < n; i += 2)
		{
			prnt(i + 1, i);
		}
		
		prnt(1);
	}
	else
	{
		prnt(n - 1);
		
		for (int i = 2; i < n - 2; i += 2)
		{
			prnt(i + 1, i);
		}
		
		prnt(n, 1);
	}
}

int main()
{
	ios::sync_with_stdio(false);
	cin.tie(nullptr);
	
	int t;
	cin >> t;
	
	while (t--)
	{
		myFunction();
		cout << enc;
	}
	
	return 0;
}
