class Solution {
public:
    vector<int> sumZero(int n) {
        vector<int> ans;
        ans.reserve(n);

        for (int i = 0; i < (n >> 1); i++)
        {
            ans.push_back(i + 1);
            ans.push_back(-i - 1);
        }

        if (n & 1) ans.push_back(0);

        return ans;
    }
};
