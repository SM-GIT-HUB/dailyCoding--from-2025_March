/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* swapNodes(ListNode* head, int k) {
        int m = k;
        ListNode* temp = head;

        while (--m)
        {
            temp = temp->next;
        }

        ListNode* one = temp;
        ListNode* two = head;

        while (temp->next)
        {
            two = two->next;
            temp = temp->next;
        }

        swap(one->val, two->val);
        return head;
    }
};
