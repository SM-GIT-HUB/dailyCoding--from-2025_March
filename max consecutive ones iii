class Solution {
public:
    int longestOnes(vector<int>& nums, int k) {
        int ans = 0;
        int zeros = 0;

        int start = 0, end = 0;

        while (end < nums.size())
        {
            if (!nums[end]) zeros++;

            while (zeros > k)
            {
                if (!nums[start++]) zeros--;
            }

            ans = max(end - start + 1, ans);
            end++;
        }

        return ans;
    }
};
