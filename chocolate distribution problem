class Solution {
  public:
    int findMinDiff(vector<int>& a, int m) {
        // code here
        int mini = 1e9;
        sort(a.begin(), a.end());
        
        for (int i = 0; i + m - 1 < (int)a.size(); i++)
        {
            mini = min(mini, a[i + m - 1] - a[i]);
        }
        
        return mini;
    }
};
