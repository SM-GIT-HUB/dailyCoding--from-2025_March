#include <bits/stdc++.h>

void track(int idx, int len, string &temp, long &n, long &ans)
{
	long long curr = stoll(temp);

	if (curr > n) return;

	if (idx == len)
	{
		ans++;
		return;
	}

	if (idx > 0) {
		track(idx + 1, len, temp, n, ans);
	}

	temp[idx] = '1';
	track(idx + 1, len, temp, n, ans);
	temp[idx] = '0';
}

long countOfNumbers(long n) {
	// Write your code here.
	long ans = 0;
	int maxLen = log(n) + 1;

	for (int len = 1; len <= maxLen; len++)
	{
		string temp = string(len, '0');
		track(0, len, temp, n, ans);
	}

	return ans;
}
