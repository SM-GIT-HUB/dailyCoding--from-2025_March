#include<bits/stdc++.h>
using namespace std;

#define enc '\n'

using int64 = int64_t;
using lint = long long;
using int128 = __int128;
using vint = vector<int>;
using vi64 = vector<int64>;
using pr2 = pair<int, int>;
using pr64 = pair<int64, int64>;

template<typename... Args>
void prnt(const Args&... args)
{
    ((cout << args << ' '), ...);
}

template<typename T>
void singleInput(int64 n, vector<T>& arr)
{
	arr.resize(n);
	for (auto &x : arr) cin >> x;
}

void myFunction()
{
	int64 n, k;
	cin >> n >> k;
	
	vi64 arr;
	singleInput(n, arr);
	
	int64 mex = 0;
	sort(arr.begin(), arr.end());
	
	for (int64 x : arr)
	{
		if (x == mex) {
			++mex;
		}
		else if (x > mex) {
			break;
		}
	}
	
	prnt(min(mex, k - 1));
}

int main()
{
	ios::sync_with_stdio(false);
	cin.tie(nullptr);
	
	int t;
	cin >> t;
	
	while (t--)
	{
		myFunction();
		cout << enc;
	}
	
	return 0;
}
