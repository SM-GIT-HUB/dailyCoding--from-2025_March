/* Node is defined as
  class Node {
  public:
    int data;
    Node* next;

    Node(int x) {
        data = x;
        next = nullptr;
    }
};
*/
class Solution {
  public:
    Node* segregate(Node* head) {
        // code here
        Node* zero = new Node(1);
        Node* zeroTail = zero;
        
        Node* one = new Node(1);
        Node* oneTail = one;
        
        Node* two = new Node(1);
        Node* twoTail = two;
        
        while (head)
        {
            int val = head->data;
            
            if (val == 0)
            {
                zeroTail->next = head;
                zeroTail = zeroTail->next;
            }
            else if (val == 1)
            {
                oneTail->next = head;
                oneTail = oneTail->next;
            }
            else
            {
                twoTail->next = head;
                twoTail = twoTail->next;
            }
            
            head = head->next;
        }
        
        if (one == oneTail) zeroTail->next = two->next;
        else zeroTail->next = one->next;
        
        oneTail->next = two->next;
        twoTail->next = nullptr;
        
        return zero->next;
    }
};
