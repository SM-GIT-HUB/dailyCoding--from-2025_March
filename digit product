#include <bits/stdc++.h>

int digitProduct(int n)
{
    // Write your code here.
    int ans = 0;
    int pow = 1;

    for (int i = 9; n > 1 && i > 1; i--)
    {
        while (n > 1 && n % i == 0)
        {
            ans += i * pow;
            pow = pow * 10;

            n = n / i;
        }
    }

    if (n > 1) return -1;
    return ans;
}
