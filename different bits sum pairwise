#include <bits/stdc++.h>

array<int, 2> mapp[31];

int differentBitsSumPairwise(vector<int>& arr, int n)
{
    // Write your code here
    for (int i = 0; i < 31; i++) mapp[i] = {0, 0};

    for (int x : arr)
    {
        for (int i = 0; i < 31; i++)
        {
            ++mapp[i][x & 1];
            x = x >> 1;
        }
    }

    int ans = 0;

    for (int i = 0; i < 31; i++)
    {
        for (int j = 0; j < 2; j++) ans += mapp[i][j] * (n - mapp[i][j]);
    }

    return ans;
}

