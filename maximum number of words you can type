class Solution {
public:
    int canBeTypedWords(string &text, string &broken) {
        bitset<26> mark;
        for (char x : broken) mark[x - 'a'] = 1;

        int flag = 1;
        int count = 0;

        for (char x : text)
        {
            if (x == ' ')
            {
                if (flag) count++;
                flag = 1;
            }
            else if (mark[x - 'a']) {
                flag = 0;
            }
        }

        count += flag;

        return count;
    }
};
