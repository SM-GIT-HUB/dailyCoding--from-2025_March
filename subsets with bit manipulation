class Solution {
public:
    vector<vector<int>> subsets(vector<int>& nums) {
        vector<int> temp;
        vector<vector<int> > ans;

        int n = (1 << nums.size());
        
        for (int state = 0; state < n; state++)
        {
            temp.clear();

            for (int idx = 0; idx < 11; idx++)
            {
                if (state & (1 << idx)) temp.push_back(nums[idx]);
            }

            ans.push_back(temp);
        }

        return ans;
    }
};
