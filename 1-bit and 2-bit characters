class Solution {
public:
    bool isOneBitCharacter(vector<int>& bits) {
        int n = bits.size();

        if (n == 1) {
            return 1;
        }

        if (bits[n - 1] == 1) {
            return 0;
        }

        n--;
        int i;
        
        for (i = 0; i < n;)
        {
            if (bits[i] == 0) {
                i++;
            }
            else
                i += 2;
        }

        return (i == n);
    }
};
