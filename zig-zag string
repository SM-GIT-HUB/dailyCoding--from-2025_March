#include <bits/stdc++.h> 
string zigZagString(string str, int n, int m) {
    // Write your code here.
    if (m == 1) {
        return str;
    }

    vector<string> strs(m, "");

    int r = 0;
    int p = 1;

    for (char x : str)
    {
        strs[r].push_back(x);

        if (r == 0) {
            p = 1;
        }
        else if (r == m - 1) {
            p = -1;
        }

        r += p;
    }

    string ans = "";

    for (string &str : strs)
    {
        for (char x : str)
        {
            ans.push_back(x);
        }
    }

    return ans;
}
