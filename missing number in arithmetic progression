#include <bits/stdc++.h> 
int missingNumber(vector<int>& arr, int n) 
{
    // Write your code here.
    int diff1 = arr[1] - arr[0];
    int diff2 = arr[n - 1] - arr[n - 2];

    if (diff1 != diff2)
    {
        if (diff1 > diff2) {
            return arr[0] + diff2;
        }
        else
            return arr[n - 1] - diff1;
    }

    for (int i = 1; i < n - 1; i++)
    {
        if (arr[i] - arr[i - 1] != diff1) {
            return arr[i] - diff1;
        }
    }

    return -1;
}
