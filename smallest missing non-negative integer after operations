class Solution {
public:
    int findSmallestInteger(vector<int>& arr, int val) {
        int mapp[100001] = {0};

        for (int &x : arr)
        {
            if (x < 0) ++mapp[(x % val + val) % val];
            else ++mapp[x % val];
        }

        for (int i = 0; i < arr.size(); i++)
        {
            if (--mapp[i % val] < 0) return i;
        }

        return arr.size();
    }
};
