class Solution {
public:
    int longestSubarray(vector<int>& arr) {
        int ans = 0;
        int start = 0, end = 0;

        int count = 0;

        while (end < arr.size())
        {
            if (arr[end] == 0) count++;

            while (count > 1)
            {
                if (arr[start++] == 0) count--;
            }
            
            ans = max(end - start, ans);
            end++;
        }
        
        return ans;
    }
};
