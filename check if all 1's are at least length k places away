class Solution {
public:
    bool kLengthApart(vector<int>& arr, int k) {
        int last = -k - 1;

        for (int i = 0; i < arr.size(); i++)
        {
            if (arr[i] == 1)
            {
                if (i - last - 1 < k) {
                    return 0;
                }

                last = i;
            }
        }

        return 1;
    }
};
