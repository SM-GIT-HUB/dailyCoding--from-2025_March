class Solution {
public:
    vector<int> minBitwiseArray(vector<int>& nums) {
        vector<int> ans((int)nums.size(), -1);
        
        for (int i = 0; i < (int)ans.size(); i++)
        {
        	int x = nums[i];
        	
        	for (int e = 0; e < x; e++)
        	{
        		if ((e | (e + 1)) == x)
        		{
        			ans[i] = e;
        			break;
				}
			}
		}
		
		return ans;
    }
};
