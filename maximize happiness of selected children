class Solution {
public:
    long long maximumHappinessSum(vector<int>& arr, int k) {
        ios_base::sync_with_stdio(0), cin.tie(0), cout.tie(0);
        
        long long sum = 0;
        sort(arr.begin(), arr.end(), greater<int>());

        for (int i = 0; i < k; i++)
        {
            if (arr[i] - i <= 0) {
                break;
            }
            else
                sum += arr[i] - i;
        }

        return sum;
    }
};
