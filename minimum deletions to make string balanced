class Solution {
public:
    int minimumDeletions(string s) {
        int n = (int)s.size();

        int b = 0;
        int count = 0;

        for (char ch : s)
        {
            if (ch == 'b') {
                ++b;
            }
            else
                count = min(count + 1, b);
        }

        return count;
    }
};
