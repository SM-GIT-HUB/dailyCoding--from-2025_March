#include <bits/stdc++.h> 
vector<string> removeComments(vector<string>& text)
{
	// Write your code here
    vector<string> ans;

    int block = 0;
    string temp = "";

    for (string &str : text)
    {
        int n = str.size();

        for (int i = 0; i < n;)
        {
            if (block)
            {
                if (str[i] == '*' && i + 1 < n && str[i + 1] == '/')
                {
                    block = 0;
                    i += 2;
                }
                else
                    i++;
            }
            else
            {
                if (str[i] == '/' && i + 1 < n && str[i + 1] == '*')
                {
                    i += 2;
                    block = 1;
                }
                else if (str[i] == '/' && i + 1 < n && str[i + 1] == '/') {
                    break;
                }
                else
                    temp.push_back(str[i++]);
            }
        }

        if (!block && temp.size())
        {
            ans.push_back(temp);
            temp = "";
        }
    }

    return ans;
}
