class Solution {
public:
    long long getDescentPeriods(vector<int>& prices) {
        int last = 0;
        long long count = 0;

        for (int i = 1; i < (int)prices.size(); i++)
        {
            if (prices[i - 1] - 1 != prices[i]) {
                last = i;
            }

            count += i - last + 1;
        }

        return (count + 1);
    }
};
