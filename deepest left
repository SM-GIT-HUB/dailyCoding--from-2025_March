#include <bits/stdc++.h> 
/*
	Tree Node class.

	class BinaryTreeNode 
	{
		T data;
		BinaryTreeNode<T> *left;
		BinaryTreeNode<T> *right;

		BinaryTreeNode(T data) {
			this->data = data;
			left = NULL;
			right = NULL;
		}
	}
*/

using pr2 = pair<int, int>;
using Node = BinaryTreeNode<int>;

pr2 dfs(Node* root, int lvl, int r)
{
	if (!root) {
		return {0, -1};
	}

	if (!root->left && !root->right) {
		if (r) {
			return {0, -1};
		}

		return {root->data, lvl};
	}

	pr2 left = dfs(root->left, lvl + 1, 0);
	pr2 right = dfs(root->right, lvl + 1, 1);

	if (left.second > right.second) {
		return left;
	}
	else if(left.second < right.second) {
		return right;
	}

	return {max(left.first, right.first), left.second};
}

int deepestLeftLeafNode(BinaryTreeNode<int>* root)
{
    // Write your code here.
	pr2 ans = dfs(root, 0, 1);

	return ans.first;
}
